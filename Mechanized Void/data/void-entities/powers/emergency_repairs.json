            "resource": "*:*_is_active",
            "comparison": "==",
            "compare_to": 1
        },
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "particle minecraft:dust 0 0 0 1 ~ ~ ~ 0.375 0.375 0.375 0.2 20 normal",
                    "permission_level": 2
                },
                {
                    "type": "origins:execute_command",
                    "command": "particle minecraft:dust 0 0 0 1 ~ ~0.5 ~ 0.375 0.375 0.375 0.2 20 normal",
                    "permission_level": 2
                },
                {
                    "type": "origins:execute_command",
                    "command": "particle minecraft:dust 0 0 0 1 ~ ~1 ~ 0.375 0.375 0.375 0.2 20 normal",
                    "permission_level": 2
                },
                {
                    "type": "origins:execute_command",
                    "command": "particle minecraft:dust 0 0 0 1 ~ ~1.5 ~ 0.375 0.375 0.375 0.2 20 normal",
                    "permission_level": 2
                },
                {
                    "type": "origins:execute_command",
                    "command": "particle minecraft:dust 0 0 0 1 ~ ~2 ~ 0.375 0.375 0.375 0.2 20 normal",
                    "permission_level": 2
                }
            ]
        }
    }
}