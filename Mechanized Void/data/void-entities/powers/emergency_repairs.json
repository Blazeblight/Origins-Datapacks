{
    "name": "Emergency Repairs",
    "description": "When above 75% energy and 50% exoskeleton durability, you can enter an emergency repair state when taking fatal damage, preventing movement while regenerating to full health. Your exoskeleton becomes fully rigid and covers the entirety of your form, preventing you from taking any damage. Upon complete regeneration, you do one final attack, dealing significant void damage to anything and anyone in close proximity. This will drain 70% of your energy and damage your exoskeleton by 10%.",
    "type": "origins:multiple",
    "has_requirements": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "start_value": 1,
        "hud_render": {
            "should_render": false
        }
    },
    "requirement_update": {
        "type": "origins:action_over_time",
        "interval": 2,
        "condition": {
            "type": "origins:or",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:energy_resource",
                    "comparison": "<",
                    "compare_to": 6144
                },
                {
                    "type": "origins:resource",
                    "resource": "*:exoskeleton_emergency_repair",
                    "comparison": "==",
                    "compare_to": 0
                }
            ]
        },
        "rising_action": {
            "type": "origins:change_resource",
            "resource": "*:*_has_requirements",
            "change": -1
        },
        "falling_action": {
            "type": "origins:change_resource",
            "resource": "*:*_has_requirements",
            "change": 1
        }
    },
    "is_active": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "min_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "*:energy_resource",
                    "change": -1638
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:exoskeleton_durability_0",
                    "change": -50
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:exoskeleton_durability_1",
                    "change": -55
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:exoskeleton_durability_2",
                    "change": -60
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:exoskeleton_durability_3",
                    "change": -65
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:exoskeleton_durability_4",
                    "change": -70
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:exoskeleton_durability_5",
                    "change": -75
                },
                {
                    "type": "origins:play_sound",
                    "sound": "entity.generic.explode"
                },
                {
                    "type": "origins:execute_command",
                    "command": "function void-entities:erepair_end",
                    "permission_level": 2
                }
            ]
        },
        "start_value": 0,
        "hud_render": {
            "should_render": false
        }
    },
    "duration": {
        "type": "origins:cooldown",
        "cooldown": 100,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_01.png",
            "bar_index": 18
        }
    },
    "remove_active": {
        "type": "origins:action_over_time",
        "interval": 2,
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_duration",
            "comparison": "==",
            "compare_to": 0
        },
        "rising_action": {
            "type": "origins:change_resource",
            "resource": "*:*_is_active",
            "change": -1
        }
    },
    "dummy": {
        "type": "origins:action_on_callback",
        "entity_action_added": {
            "type": "origins:execute_command",
            "command": "resource set @s void-entities:emergency_repairs_duration 100",
            "permission_level": 2
        }
    },
    "prevent_death": {
        "type": "origins:prevent_death",
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_has_requirements",
            "comparison": "==",
            "compare_to": 1
        },
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_is_active",
                    "change": 1
                },
                {
                    "type": "origins:trigger_cooldown",
                    "power": "*:*_duration"
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:energy_resource",
                    "change": -4096
                },
                {
                    "type": "origins:play_sound",
                    "sound": "block.netherite_block.hit"
                },
                {
                    "type": "origins:delay",
                    "ticks": 20,
                    "action": {
                        "type": "origins:play_sound",
                        "sound": "block.netherite_block.hit"
                    }
                },
                {
                    "type": "origins:delay",
                    "ticks": 50,
                    "action": {
                        "type": "origins:play_sound",
                        "sound": "block.netherite_block.hit"
                    }
                },
                {
                    "type": "origins:delay",
                    "ticks": 80,
                    "action": {
                        "type": "origins:play_sound",
                        "sound": "block.netherite_block.hit"
                    }
                },
                {
                    "type": "origins:execute_command",
                    "command": "function void-entities:erepair_message",
                    "permission_level": 2
                }
            ]
        }
    },
    "invulnerability": {
        "type": "origins:invulnerability",
        "damage_condition": {
            "type": "origins:constant",
            "value": true
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_is_active",
            "comparison": "==",
            "compare_to": 1
        }
    },
    "slow_movement": {
        "type": "origins:conditioned_attribute",
        "tick_rate": 1,
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_is_active",
            "comparison": "==",
            "compare_to": 1
        },
        "modifier": {
            "attribute": "minecraft:generic.movement_speed",
            "operation": "multiply_total",
            "value": -0.8
        }
    },
    "no_jump": {
        "type": "origins:modify_jump",
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_is_active",
            "comparison": "==",
            "compare_to": 1
        },
        "modifier": {
            "operation": "multiply_total",
            "value": -1
        }
    },
    "no_damage": {
        "type": "origins:modify_damage_dealt",
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_is_active",
            "comparison": "==",
            "compare_to": 1
        },
        "modifier": {
            "operation": "multiply_total",
            "value": -1
        }
    },
    "heal": {
        "type": "origins:action_over_time",
        "interval": 1,
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_is_active",
            "comparison": "==",
            "compare_to": 1
        },
        "entity_action": {
            "type": "origins:heal",
            "amount": 0.5
        }
    },
    "visuals_color": {
        "type": "origins:model_color",
        "red": 0,
        "green": 0,
        "blue": 0,
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_is_active",
            "comparison": "==",
            "compare_to": 1
        }
    },
    "visuals_particles": {
