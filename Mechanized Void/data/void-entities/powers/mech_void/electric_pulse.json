{
    "name": "Electric Pulse",
    "description": "[Primary] You can quickly blast a small electric pulse, damaging and slowing nearby entities. This consumes a fair amount of energy and damages your exoskeleton.",
    "type": "origins:multiple",
    "has_requirements": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "start_value": 1,
        "hud_render": {
            "should_render": false
        }
    },
    "req_update": {
        "type": "origins:action_over_time",
        "interval": 2,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:energy_drained",
                    "comparison": "==",
                    "compare_to": 1
                },
                {
                    "type": "origins:resource",
                    "resource": "*:exoskeleton_is_active",
                    "comparison": "==",
                    "compare_to": 0
                }
            ]
        },
        "rising_action": {
            "type": "origins:change_resource",
            "resource": "*:*_has_requirements",
            "change": -1
        },
        "falling_action": {
            "type": "origins:change_resource",
            "resource": "*:*_has_requirements",
            "change": 1
        }
    },
    "send_pulse": {
        "type": "origins:active_self",
        "cooldown": 100,
        "key": {
            "key": "key.origins.primary_active",
            "continuous": true
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_has_requirements",
            "comparison": "==",
            "compare_to": 1
        },
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "function void-entities:func_electric_pulse",
                    "permission_level": 4
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:energy_resource",
                    "change": -200
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:exoskeleton_durability_0",
                    "change": -5
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:exoskeleton_durability_1",
                    "change": -5
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:exoskeleton_durability_2",
                    "change": -5
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:exoskeleton_durability_3",
                    "change": -5
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:exoskeleton_durability_4",
                    "change": -5
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:exoskeleton_durability_5",
                    "change": -5
                }
            ]
        },
        "hud_render": {
            "should_render": true
        }
    }
}